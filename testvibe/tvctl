#!/usr/bin/python

import argparse
import sys

import testvibe


class CMDHandler(object):

    args = None

    def __init__(self, args):
        self.args = args

    def execute(self):
        if self.args.version:
            print(testvibe.VERSION)
            sys.exit(0)


if __name__ == '__main__':
    parser = argparse.ArgumentParser(description='Testvibe control')
    parser.add_argument('startproject')
    parser.add_argument('addtestgroup')
    parser.add_argument('run', action='store_true')
    parser.add_argument('--version', action='store_true',
                        help='show program\'s number and exit')
    parser.add_argument('-v', '--verbosity', default=0,
                        help=('verbosity level; 0=minimal output, '
                              '1=normal output'))
    #parser.add_argument('run')
    cmd_handler = CMDHandler(parser.parse_args())
    cmd_handler.execute()
